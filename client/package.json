{
  "browserify": {
    "transform": [
      "babelify",
      "yamlify",
      "envify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "@cycle/most-run": "^3.0.0",
    "@most/create": "^1.0.1",
    "@motorcycle/dom": "^2.0.0",
    "apollo-client": "^0.3.13",
    "fwitch": "^1.0.1",
    "humane-js": "^3.2.2",
    "loads-css": "^1.0.0",
    "lodash.samplesize": "^4.0.4",
    "marked": "^0.3.5",
    "most": "^0.19.7",
    "pusher-js": "^3.1.0",
    "querystring": "^0.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "11.0.1",
    "browserify-incremental": "^3.0.1",
    "envify": "^3.4.0",
    "instant-server": "^2.0.0",
    "yamlify": "^0.1.3"
  },
  "scripts": {
    "style": "stylus src/style.styl -o dist/style.css",
    "live": "find src/*.js -type f | grep -v 'swp' | entr godotenv -f ../global.env,../local.env fish -c 'browserifyinc src/main.js --outfile dist/main.js; and echo \"done!\"'",
    "server": "instant -p 5656",
    "build-prod": "godotenv -f ../global.env,../prod.env browserify src/main.js --outfile dist/main.js",
    "predeploy": "npm run build-prod && cp index.html dist/ && sed -i -e 's/dist\\/main\\.js/main.js/' dist/index.html && cp -r static dist/",
    "deploy": "godotenv -f ../global.env,../prod.env fish -c 's3cmd sync dist/ s3://$S3_BUCKET'"
  }
}
