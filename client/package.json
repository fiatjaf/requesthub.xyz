{
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "@cycle/most-run": "^4.1.0",
    "@most/create": "^1.0.1",
    "@most/hold": "^1.3.1",
    "@motorcycle/dom": "^2.0.0",
    "codemirror": "^5.15.2",
    "cycle-graphql-most-driver": "^0.2.0",
    "cycle-hashrouter-most-driver": "0.0.3",
    "cycle-notification-most-driver": "0.0.5",
    "fwitch": "^1.0.1",
    "loads-css": "^1.0.0",
