/* CodeMirror */
label > input
  width 100% 

.CodeMirror 
  height auto !important
  font-size 0.7rem
  border 1px solid
  -webkit-appearance textfield
  -moz-appearance textfield
  appearance textfield

input, textarea, select, .CodeMirror 
  display block

label:not(*[for])input, select
  display inline-block
  margin-bottom 20px !important

.CodeMirror, textarea
  display block
  margin-bottom 20px !important

input:focus, textarea:focus, select:focus, .CodeMirror-focused 
  outline none !important
  background-color #efeee8 !important
  border-color rgba(0, 0, 0, 0.14902) !important
  box-shadow none !important
